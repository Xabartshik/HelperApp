<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="HelperApp.Views.LoginPage">


    <VerticalStackLayout Padding="30" Spacing="15">
        <Entry x:Name="UsernameEntry" Placeholder="Employee ID" Keyboard="Numeric" />
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True" />
        <Button Text="Войти" Clicked="OnLoginClicked" />
        <Label x:Name="ErrorLabel" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>