<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HelperApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HelperApp.Views"
    FlyoutBehavior="Disabled"
    BackgroundColor="#1a1a2e">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login" />

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="main" />

    <!-- Маршрут для страницы деталей инвентаризации -->
    <ShellContent
        Title="InventoryDetails"
        ContentTemplate="{DataTemplate views:InventoryDetailsPage}"
        Route="inventory-details" />

    <!-- Здесь можно добавить маршруты для других типов задач -->
    <!-- <ShellContent
        Title="ReceiptDetails"
        ContentTemplate="{DataTemplate views:ReceiptDetailsPage}"
        Route="receipt-details" />
    
    <ShellContent
        Title="MovementDetails"
        ContentTemplate="{DataTemplate views:MovementDetailsPage}"
        Route="movement-details" /> -->

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" />
    </Shell.BackButtonBehavior>

</Shell>
